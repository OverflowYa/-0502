<Window x:Class="WpfApp1.MainWindow" 
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
        Title="WPF App" Height="350" Width="525">
    <Grid>
        <Menu>
            <MenuItem Header="_File">
                <MenuItem Header="_Close" Click="MenuItem_Click"/>
            </MenuItem>
            <MenuItem Header="_View">
                <MenuItem Header="_Change Background Color" Click="MenuItem_Click"/>
            </MenuItem>
            <MenuItem Header="_Help">
                <MenuItem Header="_About" Click="MenuItem_Click"/>
            </MenuItem>
        </Menu>
        <ToolBar>
            <Button Content="_Close" Click="MenuItem_Click" HorizontalAlignment="Left" VerticalAlignment="Top"/>
            <Button Content="_Change Background Color" Click="MenuItem_Click" HorizontalAlignment="Left" VerticalAlignment="Top"/>
            <Button Content="_About" Click="MenuItem_Click" HorizontalAlignment="Left" VerticalAlignment="Top"/>
        </ToolBar>
        <StatusBar Height="30" VerticalAlignment="Bottom">
            <StatusBarItem>
                <TextBlock x:Name="statusText"></TextBlock>
            </StatusBarItem>
        </StatusBar>
    </Grid>
</Window> 